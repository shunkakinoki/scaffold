{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "outDir": "./dist",
    "sourceMap": true,
    "strict": true,
    "target": "ES2017",
    "paths": {
      "@/components/*": ["./packages/web/src/components/*"],
      "@/deployments/*": ["./packages/eth/deployments/*"],
      "@/typechain/*": ["./packages/eth/typechain/*"],
      "@/types/*": ["./packages/types/index.ts"]
    }
  },
  "exclude": ["dist", "node_modules"]
}
