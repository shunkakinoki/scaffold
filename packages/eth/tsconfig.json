{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "outDir": "./dist",
    "paths": {
      "@/typechain/*": ["typechain/*"],
      "@/types/*": ["types/index.ts"]
    },
    "rootDirs": ["./deploy", "./tasks", "./test", "./types", "./scripts"],
    "sourceMap": true,
    "strict": true,
    "target": "ES2017",
    "types": []
  },
  "exclude": ["**/node_modules"],
  "files": ["./hardhat.config.ts"],
  "include": [
    "./deploy",
    "./scripts",
    "./tasks",
    "./test",
    "./types",
    "./hardhat.config.ts"
  ]
}
